# Security Intelligence Platform Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="Security Intelligence Platform"
APP_VERSION="0.1.0"
DEBUG=false

# API
API_PREFIX="/api"
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Database (optional for MVP - using in-memory storage)
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/security_intel"

# OpenAI API - REQUIRED
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo-preview"
EMBEDDING_MODEL="text-embedding-3-small"

# Data Sources
HACKERNEWS_RSS_URL="https://feeds.feedburner.com/TheHackersNews"

# Bright Data Web Unlocker (for full article scraping)
# Get API key from: https://brightdata.com/ > Control Panel > Zones > thehackernews_scraper
BRIGHTDATA_API_KEY=""
BRIGHTDATA_ZONE_NAME="thehackernews_scraper"

# Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_RATE_LIMIT_SECONDS=2.0
SCRAPING_CONCURRENCY=3
SCRAPING_TIMEOUT_SECONDS=60

# Archive Backfill (runs on first startup if DB is empty)
ARCHIVE_BACKFILL_DAYS=30
ARCHIVE_MAX_ARTICLES=500

# Ingestion Settings
INGESTION_INTERVAL_MINUTES=15
MAX_ARTICLES_PER_FETCH=50

# Intelligence Settings
SIMILARITY_THRESHOLD=0.75
MAX_GRAPH_DEPTH=2
PREDICTION_LOOKBACK_DAYS=30
